{
  "name": "@pashask/x-cli",
  "version": "0.1.0",
  "description": "A fast, type-safe CLI for X (Twitter)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "x": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ps/x-cli.git"
  },
  "bugs": {
    "url": "https://github.com/ps/x-cli/issues"
  },
  "homepage": "https://github.com/ps/x-cli#readme",
  "files": [
    "dist/index.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --minify --outfile dist/x",
    "build:node": "bun build src/index.ts --outdir dist --target node --minify",
    "build:linux": "bun build src/index.ts --compile --minify --target=bun-linux-x64 --outfile dist/x",
    "build:darwin": "bun build src/index.ts --compile --minify --target=bun-darwin-arm64 --outfile dist/x",
    "build:darwin-x64": "bun build src/index.ts --compile --minify --target=bun-darwin-x64 --outfile dist/x",
    "build:win": "bun build src/index.ts --compile --minify --target=bun-windows-x64 --outfile dist/x.exe",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "lint": "bunx 0xc .",
    "format": "bunx 0xc --fix .",
    "release": "./scripts/release.sh"
  },
  "dependencies": {
    "arctic": "^3.5.0",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0",
    "open": "^10.1.0",
    "ora": "^8.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "^1.1.16",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "pashask",
  "license": "MIT",
  "keywords": [
    "twitter",
    "x",
    "cli",
    "api"
  ]
}
