{
  "name": "browse-cli",
  "version": "1.0.1",
  "description": "Scrape any webpage to markdown using your browser session",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "browse": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PepijnSenders/browse-cli.git"
  },
  "bugs": {
    "url": "https://github.com/PepijnSenders/browse-cli/issues"
  },
  "homepage": "https://github.com/PepijnSenders/browse-cli#readme",
  "files": [
    "dist",
    "extension",
    "skills",
    ".claude-plugin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --minify --external electron --external chromium-bidi && echo '#!/usr/bin/env node' | cat - dist/index.js > dist/index.tmp && mv dist/index.tmp dist/cli.js && rm -f dist/index.js && chmod +x dist/cli.js",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "bunx 0xc .",
    "format": "bunx 0xc --fix .",
    "prepublishOnly": "bun run typecheck && bun test && bun run build"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "linkedom": "^0.18.12",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bun": "^1.1.16",
    "@types/turndown": "^5.0.6",
    "@types/ws": "^8.18.1",
    "happy-dom": "^20.0.11",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "PepijnSenders",
  "license": "MIT",
  "keywords": [
    "scraper",
    "markdown",
    "browser",
    "chrome-extension",
    "websocket",
    "cli"
  ]
}
