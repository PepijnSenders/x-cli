{
  "name": "@pep/session-scraper-mcp",
  "version": "0.1.0",
  "description": "MCP server for scraping sites using your existing browser session (Twitter, LinkedIn, etc.)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "session-scraper": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PepijnSenders/x-cli.git"
  },
  "bugs": {
    "url": "https://github.com/PepijnSenders/x-cli/issues"
  },
  "homepage": "https://github.com/PepijnSenders/x-cli#readme",
  "files": [
    "dist",
    "skill",
    ".claude-plugin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --minify --external electron --external chromium-bidi && echo '#!/usr/bin/env node' | cat - dist/index.js > dist/index.tmp && mv dist/index.tmp dist/index.js && chmod +x dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "bunx 0xc .",
    "format": "bunx 0xc --fix ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "commander": "^14.0.2",
    "playwright-core": "^1.49.1",
    "playwriter": "^0.0.34",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "^1.1.16",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "PepijnSenders",
  "license": "MIT",
  "keywords": [
    "mcp",
    "scraper",
    "twitter",
    "linkedin",
    "browser",
    "session",
    "playwright",
    "playwriter"
  ]
}
